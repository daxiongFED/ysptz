/* package-exam/components/received-a-call/received-a-call.wxss */
.page, .page--loading, .page--ready {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.page--loading, .page--ready {
  position: absolute;
  top: 0;
  left: 0;
}
.page--loading {
  z-index: 10;
}
.page--ready {
  z-index: 1;
}
.wrapper--bg {
  display: flex;
  width: 100%;
  height: 100vh;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  color: #fff;
}
.page--loading .wrapper__content {
  justify-content: center;
  align-items: center;
}
.block__number--loading {
  font-size: 80rpx;
}
.block__tips {
  font-size: 28rpx;
  position: absolute;
  bottom: 70rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.block__handle--watchMovie {
  position: absolute;
  top: 630rpx;
  right: 50rpx;
  width: 330rpx;
  height: 60rpx;
}
