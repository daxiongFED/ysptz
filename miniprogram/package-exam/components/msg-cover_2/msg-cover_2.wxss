/* package-exam/components/received-a-call/received-a-call.wxss */
@import '../../../app.wxss';
.cover {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100%;
  z-index: 10;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  bottom: 60rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  color: #fff;
}
.block--1 {
  color: #fff;
  font-weight: 600;
  margin: 80rpx 100rpx 60rpx;
}
.block--1__name {
  font-size: 60rpx;

  margin-top: 30rpx;
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}
.block--1__name.show {
  margin-top: 0;
  opacity: 1;
}
.block--1__text {
  font-size: 32rpx;

  margin-top: 30rpx;
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}

.block--1__text.show {
  margin-top: 0;
  opacity: 1;
}
.block--2 {
  margin: 80rpx 100rpx 60rpx;
  width: 560rpx;
  position: relative;
  color: #fff;
}
.block--2__quotes--big {
  position: absolute;
  font-size: 60rpx;
}
.block--2__quotes--big.left {
  top: -20rpx;
  left: -80rpx;
}
.block--2__quotes--big.right {
  bottom: 0;
  right: -60rpx;
}
.block--2__row--1 {
  font-size: 43rpx;
}
.row--1__text {
  font-size: 32rpx;
}
.row--1__text, .row--2__text, .row--3__text, .row--4__text, .row--5__text {
  display: block;
  margin: 10rpx 0;
}
.block--2__row--1 .text--yellow {
  color: #FFFF00;
}
.block--3 {
  width: 100%;
}
.wrapper__content .area__button--select{
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.g__button--select {
  height: 120rpx;
  font-size: 33rpx;
}
