/* package-exam/components/received-a-call/received-a-call.wxss */
.cover {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100%;
  background: rgba(213, 220, 33, 0.8);
  z-index: 10;
}
.content__center {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.center__input--name {
  width: 500rpx;
  height: 100rpx;
  border-radius: 100px;
  border: 1px solid #ffeb15;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.center__input--name input{
  text-align: center;
}
.placeholder_class {
  color: #999;
  text-align: center;
}
.center__select--sex {
  margin-top: 20rpx;
  width: 500rpx;
  height: 100rpx;
  display: flex;
}
.select__button {
  width: 240rpx;
  height: 100rpx;
  background: #fff;
  border: 1px solid #ffeb15;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
}
.select__button.selected {
  background: #FFEB15;
  color: #fff;
}
.select__button--female {
  border-radius: 100px 0 0 100px;
  margin-right: 20rpx;
}
.select__button--male {
  border-radius: 0 100px 100px 0;
}
.content__bottom {
  position: absolute;
  bottom: 150rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}
.bottom__button--next {
  width: 500rpx;
  height: 80rpx;
  color: #fff;
  background: linear-gradient(to right, #63B7D7 , #FF39FF);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100px;
}