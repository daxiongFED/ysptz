/* package-exam/components/received-a-call/received-a-call.wxss */
@import '../../../app.wxss';
.page {
  width: 100%;
  height: 100vh;
  position: relative;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  /* align-items: center; */
  color: #fff;
}
.block--1 {
  color: #333;
  font-weight: 600;
  margin: 80rpx 100rpx 60rpx;
}
.block--1__name {
  font-size: 60rpx;
}
.block--1__text {
  font-size: 38rpx;
}
.block--2 {
  margin: 80rpx 100rpx 60rpx;
  width: 560rpx;
  position: relative;
  color: #fff;
}
.block--2__quotes--big {
  position: absolute;
  font-size: 60rpx;
}
.block--2__quotes--big.left {
  top: 0;
  left: -60rpx;
}
.block--2__quotes--big.right {
  bottom: 0;
  right: -60rpx;
}
.block--3 {
  width: 100%;
}
.wrapper__content .area__button--select{
  position: absolute;
  bottom: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.g__button--select {
  margin: 20rpx 0;
}
