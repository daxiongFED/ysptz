/* package-exam/components/received-a-call/received-a-call.wxss */
@import '../../../app.wxss';
.page {
  width: 100%;
  height: 100vh;
  position: relative;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  color: #fff;
}
.wrapper__content .text--1 {
  font-size: 76rpx;
  margin-top: 5vh;
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}
.text--1 image {
  height: 300rpx;
}
.text--1.show {
  margin-top: 12vh;
  opacity: 1;
}
.text--2 {
  margin-top: 80rpx;
  font-size: 30rpx;
  display: flex;
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}
.text--2.show {
  margin-top: 50rpx;
  opacity: 1;
}
.text--2 .icon--again {
  margin-top: 5rpx;
  margin-right: 10rpx;
}
.text--2 .icon--again image {
  width: 30rpx;
  height: 30rpx;
}
.wrapper__content .area__button--select{
  position: absolute;
  bottom: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}
