/* package-exam/components/received-a-call/received-a-call.wxss */
@import '../../../app.wxss';
.page {
  width: 100%;
  height: 100vh;
  position: relative;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  color: #fff;
}
.text {
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}
.text.show {
  opacity: 1;
}
.text--1 {
  /* position: absolute; */
  font-size: 52rpx;
  margin-top: calc(35vh + 30rpx);
}
.text--1.show {
  margin-top: 35vh;
}
.text--2 {
  /* position: absolute; */
  font-size: 52rpx;
  margin-top: 40rpx;
}
.text--2.show {
  margin-top: 10rpx;
}
.text--3 {
  /* position: absolute; */
  font-size: 24rpx;
  margin-top: 50rpx;
}
.text--3.show {
  margin-top: 20rpx;
}
.text--4 {
  position: absolute;
  font-size: 24rpx;
  bottom: 70rpx;
}
.text--4 {
  animation:mymove 1s infinite;
}
@keyframes mymove {
  0% { bottom: 70rpx; }
  50% { bottom: 90rpx; }
  100% { bottom: 70rpx; }
}
