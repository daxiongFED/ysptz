.wrapper--bg {
  display: flex;
  width: 100%;
  height: 100vh;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  color: #fff;
}

@keyframes warn {
	0% {
		transform: scale(0);
		opacity: 0.0;
	}
	25% {
		transform: scale(0.5);
		opacity: 0.25;
	}
	55% {
		transform: scale(0.7);
		opacity: 0.5;
	}
	85% {
		transform: scale(0.9);
		opacity: 0.6;
	}
	100% {
		transform: scale(1);
		opacity: 0.0;
	}
}
 
.wrapper__content--1 {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container {
  position: relative;
	width: 250rpx;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.circle {
  color: #333;
  font-weight: 600;
  font-size: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
/* 保持大小不变的小圆圈  */
.circle {
  position: absolute;
  top: 0;
  left: 0;
	width: 250rpx;
  height: 250rpx;
	background: rgba(255, 235, 21, 0.7);
	border-radius: 200rpx;
	z-index: 2;
}
/* 产生动画（向外扩散变大）的圆圈  */
.pulse_1 {
  position: absolute;
  top: -75rpx;
  left: -75rpx;
	width: 400rpx; 
  height: 400rpx;
	background: rgba(255, 235, 21, 0.8);
	/* border: 40rpx solid rgba(255, 235, 21, 1); */
	border-radius: 300px;
	z-index: 1;
	opacity: 0;
	animation: warn 1500ms ease-out;
	animation-iteration-count: infinite;  
}
.pulse_2 {
  position: absolute;
  top: -125rpx;
  left: -125rpx;
	width: 500rpx; 
  height: 500rpx;
	background: rgba(255, 235, 21, 0.8);
	/* border: 40rpx solid rgba(255, 235, 21, 1); */
	border-radius: 300px;
	z-index: 1;
	opacity: 0;
	animation: warn 2500ms ease-out;
	animation-iteration-count: infinite;  
}
.circle__name {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}