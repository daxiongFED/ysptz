@import '../../../app.wxss';
.page {
  width: 100%;
  height: 100vh;
  position: relative;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  /* align-items: center; */
  color: #fff;
}
.block--1 {
  color: #333;
  font-weight: 600;
  margin: 80rpx 100rpx 60rpx;
}
.block--1__name {
  font-size: 60rpx;
}
.block--1__text {
  font-size: 32rpx;
}
.block--2 {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #fff;
}
.block--2__text {
  margin: 50rpx 0 50rpx -80rpx;
  color: #333;
  font-weight: 600;
  font-size: 32rpx;
}
.block--2_tips {
  color: #ffffff;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;

  position: absolute;
  bottom: 100rpx;
}