/* package-exam/components/received-a-call/received-a-call.wxss */
@import '../../../app.wxss';
.page {
  width: 100%;
  height: 100vh;
  position: relative;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  /* align-items: center; */
  color: #fff;
}
.block--1 {
  color: #333;
  font-weight: 600;
  margin: 80rpx 100rpx 60rpx;
}
.block--1__name {
  font-size: 60rpx;

  margin-top: 30rpx;
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}
.block--1__name.show {
  margin-top: 0;
  opacity: 1;
}
.block--1__text {
  font-size: 32rpx;

  margin-top: 30rpx;
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}
.block--1__text.show {
  margin-top: 0;
  opacity: 1;
}
.block--2 {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #fff;
}
.block--2 image {
  margin-top: 30rpx;
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}
.block--2 image.show {
  margin-top: 0;
  opacity: 1;
}
.block--2__text {
  margin: 50rpx 0 50rpx -80rpx;
  color: #333;
  font-weight: 600;
  font-size: 32rpx;

  margin-top: 80rpx;
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}
.block--2__text.show {
  margin-top: 50rpx;
  opacity: 1;
}
.block--2_tips {
  margin-top: 30rpx;
  opacity: 0;
  transition: all 700ms ease-out 0ms;
}

.wrapper--cover {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100%;
}