/* package-exam/components/received-a-call/received-a-call.wxss */
.page {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.wrapper--bg {
  display: flex;
  width: 100%;
  height: 100vh;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  /* align-items: center; */
  color: #fff;
}
.header {
  height: 113rpx;
}
.header image{
  width: 100%;
}
.body {
  position: relative;
  padding-top: 10rpx;
  box-sizing: border-box;
  height: calc(100vh - 113rpx - 89rpx);
}
.body .time {
  color: #8E8E93;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 10rpx;
}
.body .message {
  margin: 20rpx 0 0 20rpx;
  opacity: 0;
  margin-top: 50rpx;
  transition: all 700ms ease-out 0ms;
}
.body .message.show {
  opacity: 1;
  margin-top: 20rpx;
}
.body .message image {
  width: 600rpx;
}
.body .tap_tips {
  color: #ffffff;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;

  position: absolute;
  bottom: 70rpx;
  animation:mymove 1s infinite;

  opacity: 0;
  margin-top: 30rpx;
  transition: all 700ms ease-out 0ms;
}
@keyframes mymove {
  0% { bottom: 70rpx; }
  50% { bottom: 90rpx; }
  100% { bottom: 70rpx; }
}
.body .tap_tips.show {
  opacity: 1;
  margin: 0;
}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 89rpx;
}
.footer image {
  width: 100%;
}
.wrapper--cover {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100%;
}