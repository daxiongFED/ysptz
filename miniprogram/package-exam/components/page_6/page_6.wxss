/* package-exam/components/received-a-call/received-a-call.wxss */
.page {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.wrapper--bg {
  display: flex;
  width: 100%;
  height: 100vh;
}
.c-img-bg {
  width: 100%;
  height: 100vh;
}
.wrapper__content {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  /* align-items: center; */
  color: #fff;
}
.header {
  height: 113rpx;
}
.header image{
  width: 100%;
}
.body {
  position: relative;
  padding-top: 10rpx;
  box-sizing: border-box;
  height: calc(100vh - 113rpx - 89rpx);
}
.body .time {
  color: #8E8E93;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 10rpx;
}
.body .message {
  margin: 20rpx 0 0 20rpx;
}
.body .message image {
  width: 600rpx;
}
.body .tap_tips {
  color: #ffffff;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;

  position: absolute;
  bottom: 50rpx;
}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 89rpx;
}
.footer image {
  width: 100%;
}